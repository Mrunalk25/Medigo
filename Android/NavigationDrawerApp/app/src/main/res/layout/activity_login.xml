<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pallavi.navigationdrawerapp.LoginActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:id="@+id/toolbarlogin">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarlogin"
        android:text="Login"
        android:fontFamily="sans-serif-condensed"
        android:textSize="36dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/pink"
        android:id="@+id/tvLog"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLog"
        android:layout_margin="10dp"
        android:id="@+id/emailid_layout"
        android:background="@drawable/oval"
        >

    <ImageView
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_email_black_24dp"
        android:layout_gravity="center_vertical"
        />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/transparentl"
            android:textSize="20dp"
            android:id="@+id/etEmailID"
            android:hint="email ID"
            android:textColor="@color/grey"
            android:padding="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailid_layout"
        android:layout_margin="10dp"
        android:id="@+id/passwordlayoutlogin"
        android:background="@drawable/oval">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_vpn_key_black_24dp"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/transparentl"
            android:textSize="20dp"
            android:textColor="@color/grey"
            android:padding="10dp"
            android:id="@+id/etPasswordLogin"
            android:hint="Password"
            />



    </LinearLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordlayoutlogin"
        android:id="@+id/btnLogin"
        android:textColor="#ffffff"
        android:text="Login"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-condensed"
        android:padding="15dp"
        android:textSize="20dp"
        android:backgroundTint="@color/pink"
        android:layout_margin="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nextALogin"
        android:text="Create a new account"
        android:textAlignment="center"
        android:layout_below="@+id/btnLogin"
        android:textSize="18dp"
        android:textColor="@color/grey"
        />

</RelativeLayout>
