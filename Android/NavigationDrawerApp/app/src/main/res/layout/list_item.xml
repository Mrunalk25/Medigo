<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearLay"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/pink"
                android:textSize="20dp"
                android:fontFamily="@string/fontNApp"
                android:id="@+id/tvDocName"
                android:text="Name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:fontFamily="@string/fontNApp"
                android:textSize="18dp"
                android:id="@+id/tvDocCategory"
                android:text="Category"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/emailLabel"
                android:text="email ID: "
                android:textColor="@color/grey"
                android:fontFamily="@string/fontNApp"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:fontFamily="@string/fontNApp"
                android:textSize="18dp"
                android:id="@+id/tvDocEmail"
                android:text="email ID"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:fontFamily="@string/fontNApp"
                android:textSize="18dp"
                android:id="@+id/tvDocA"
                android:text="Contact No: "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:fontFamily="@string/fontNApp"
                android:textSize="18dp"
                android:id="@+id/tvDocContact"
                android:text="Contact"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:fontFamily="@string/fontNApp"
                android:textSize="18dp"
                android:id="@+id/tvDocA"
                android:text="Address: "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:fontFamily="@string/fontNApp"
                android:textSize="18dp"
                android:id="@+id/tvDocAddress"
                android:text="Address"/>
            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnApp"
                android:textSize="10dp"
                android:text="Get Appointment"
                android:background="@color/pink"
                android:textColor="#ffffff"
                android:padding="10dp"/>



        </LinearLayout>
        
        
    </android.support.v7.widget.CardView>

</LinearLayout>