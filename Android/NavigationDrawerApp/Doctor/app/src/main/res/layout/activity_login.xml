<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.doctor.LoginActivity"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/toolbarlogin">

</android.support.v7.widget.Toolbar>
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarlogin"
        android:text="Login"
        android:fontFamily="sans-serif-condensed"
        android:textSize="36dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/pink"
        android:id="@+id/tvLog"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLog"
        android:layout_margin="10dp"
        android:background="@drawable/oval"
        android:id="@+id/emailid_layout"
        android:orientation="horizontal">


        <EditText android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/grey"
            android:textSize="20dp"
            android:id="@+id/etEmailID"
            android:hint="email ID"
            android:background="@drawable/transparentl"
            android:padding="10dp"/>
    </LinearLayout>



    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailid_layout"
        android:layout_margin="10dp"
        android:background="@drawable/oval"
        android:id="@+id/passwordlayoutlogin" >


        <EditText android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:textSize="20dp"
            android:background="@drawable/transparentl"
            android:padding="10dp"
            android:id="@+id/etPasswordLogin"
            android:textColor="@color/grey"
            android:hint="Password"/>
    </LinearLayout>

    <Button android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordlayoutlogin"
        android:id="@+id/btnLogin"
        android:textColor="#ffffff"
        android:backgroundTint="@color/pink"
        android:text="Login"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-condensed"
        android:padding="15dp"
        android:textSize="20dp"

        android:layout_margin="10dp"/>
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nextALogin"
        android:text="Create a new account"
        android:textAlignment="center"
        android:layout_below="@+id/btnLogin"
        android:textSize="18dp" />

</RelativeLayout>