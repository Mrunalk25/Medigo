<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.doctor.MainActivity"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:fontFamily="@string/fontNApp"
        android:text="Sign up"
        android:textAlignment="center"
        android:textColor="@color/pink"
        android:textSize="36dp"
        android:textStyle="bold" />
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvLogin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="18dp"
    android:layout_marginLeft="18dp"
    android:id="@+id/username_layout"
    android:layout_below="@+id/tvLogin"
        android:background="@drawable/oval"
    android:padding="1dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:hint="Name"
        android:padding="10dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:background="@drawable/transparentl"
        android:textColor="@color/grey"
        android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/password_layout"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/email_layout"
        android:background="@drawable/oval"
        android:padding="1dp">



<EditText android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="10dp"
    android:inputType="textPassword"
    android:id="@+id/etPassword"
    android:hint="Password"
    android:background="@drawable/transparentl"
    android:textColor="@color/grey"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:id="@+id/email_layout"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/oval"
        android:layout_below="@+id/username_layout"
       android:padding="1dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="10dp"
        android:paddingLeft="0dp"
        android:background="@drawable/transparentl"
        android:textColor="@color/grey"
        android:hint="email ID"
        android:id="@+id/etEmail"
        android:paddingRight="0dp"

        android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:id="@+id/contact_layout"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/oval"
        android:layout_below="@+id/password_layout"
        android:padding="1dp">

    <EditText android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="10dp"
        android:paddingLeft="0dp"
        android:background="@drawable/transparentl"
        android:textColor="@color/grey"
        android:hint="Mobile number"
        android:id="@+id/etContact"
        android:paddingRight="0dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:id="@+id/address_layout"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/oval"
        android:layout_below="@+id/contact_layout"
        android:padding="1dp">


    <EditText android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:hint="Address"
        android:background="@drawable/transparentl"
        android:textColor="@color/grey"
        android:padding="10dp"
        android:paddingLeft="0dp"
        android:id="@+id/etAddress"
        android:paddingRight="0dp"

        android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:id="@+id/category_layout"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/oval"
        android:layout_below="@+id/address_layout"
        android:padding="1dp">


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/category"
            android:entries="@array/categories"
            android:layout_below="@+id/etAddress"
            android:padding="15dp"
            tools:ignore="InvalidId">


        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:id="@+id/location_layout"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/oval"
        android:layout_below="@+id/category_layout"
        android:padding="1dp">


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/location"
            android:entries="@array/categories"
            android:layout_below="@+id/category"
            android:padding="15dp"
            tools:ignore="InvalidId">


        </Spinner>
    </LinearLayout>

            <Button android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/grp_of_radio"
                android:text="Sign up"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                android:fontFamily="@string/fontNApp"
                android:padding="15dp" android:textSize="20dp"
                android:id="@+id/btnSignup"
                android:background="@drawable/oval"
                android:backgroundTint="@color/pink"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already a user ? Login"
        android:layout_below="@id/btnSignup"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textColor="@color/grey"
        android:id="@+id/tv_login"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>