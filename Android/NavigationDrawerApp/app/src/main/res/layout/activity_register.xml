<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pallavi.navigationdrawerapp.RegisterActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/grey"
        app:popupTheme="@style/AppTheme.PopupOverlay" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:fontFamily="@string/fontNApp"
        android:id="@+id/tvLogin"
        android:text="Sign up"
        android:textAlignment="center"
        android:textColor="@color/pink"
        android:textSize="36dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:id="@+id/username_layout"
        android:layout_below="@+id/tvLogin"
        android:background="@drawable/oval"
        android:padding="1dp">


        <ImageView
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:src="@drawable/usernameicon"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="10dp"
            android:id="@+id/etUsername"
            android:hint="Name"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="@drawable/transparentl"
            android:textColor="@color/grey"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/password_layout"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/email_layout"
        android:background="@drawable/oval"
        android:padding="1dp">


    <ImageView
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_vpn_key_black_24dp"
        android:layout_gravity="center_vertical"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="10dp"
        android:inputType="textPassword"
        android:id="@+id/etPassword"
        android:hint="Password"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:background="@drawable/transparentl"
        android:textColor="@color/grey"
        android:textSize="20dp" />


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:id="@+id/email_layout"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/username_layout"
        android:background="@drawable/oval"
        android:padding="1dp">


        <ImageView
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_email_black_24dp"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="10dp"
            android:paddingLeft="0dp"
            android:hint="email ID"
            android:id="@+id/etEmail"
            android:paddingRight="0dp"
            android:background="@drawable/transparentl"
            android:textColor="@color/grey"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:id="@+id/contact_layout"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/password_layout"
        android:background="@drawable/oval"
        android:padding="1dp">


        <ImageView
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_call_black_24dp"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="10dp"
            android:paddingLeft="0dp"
            android:hint="Mobile number"
            android:id="@+id/etContact"
            android:paddingRight="0dp"
            android:background="@drawable/transparentl"
            android:textColor="@color/grey"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:id="@+id/address_layout"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/contact_layout"
        android:background="@drawable/oval"
        android:padding="1dp">


        <ImageView
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_location_on_black_24dp"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:hint="Address"
            android:padding="10dp"
            android:paddingLeft="0dp"
            android:id="@+id/etAddress"
            android:paddingRight="0dp"
            android:background="@drawable/transparentl"
            android:textColor="@color/grey"
            android:textSize="20dp" />


    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_layout"
        android:layout_centerInParent="true"
        android:id="@+id/grp_of_radio"
        android:layout_margin="10dp">

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Male"
            android:fontFamily="@string/fontNApp"
            android:textColor="@color/pink"
            android:textSize="20dp"/>

        <RadioButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Female"
            android:fontFamily="@string/fontNApp"
            android:layout_gravity="left"
            android:textSize="20dp"
            android:textColor="@color/pink"/>
    </RadioGroup>


    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/grp_of_radio"
        android:text="Sign up"
        android:layout_centerInParent="true"
        android:textColor="#ffffff"
        android:fontFamily="@string/fontNApp"
        android:padding="15dp"
        android:textSize="20dp"
        android:id="@+id/btnSignup"
        android:background="@drawable/oval"
        android:backgroundTint="@color/pink" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already a user ? Login"
        android:layout_below="@id/btnSignup"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textColor="@color/grey"
        android:id="@+id/tv_login" />

</RelativeLayout>
